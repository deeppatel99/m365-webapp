# SMTP Configuration for sending emails
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SMTP_SIGNUP_ALERT=admin@yourcompany.com

# Restricted email domains (comma-separated)
RESTRICTED_DOMAINS=test.com,yahoo.com

# Timeout Configurations (in milliseconds)
# OTP expiration time (default: 10 minutes = 600000ms)
OTP_EXPIRATION_MS=600000

# OTP resend cooldown period (default: 3 minutes = 180000ms)
OTP_RESEND_COOLDOWN_MS=180000

# Rate limiter window (default: 1 minute = 60000ms)
RATE_LIMITER_WINDOW_MS=60000

# Maximum requests per rate limiter window (default: 3)
RATE_LIMITER_MAX_REQUESTS=3
